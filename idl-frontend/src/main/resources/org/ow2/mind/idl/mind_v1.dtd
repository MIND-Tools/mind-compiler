<?map ast="array"     type="value" ?>



<!-- *********************************************************************** -->
<!-- Node grammar                                                            -->
<!-- *********************************************************************** -->

<!ELEMENT itf ((include)*, annotation* ,
               (enum|struct|structRef|union|unionRef|typedef)*,
               method*) >
<!ATTLIST itf
  name CDATA #REQUIRED
  extends CDATA #IMPLIED
  isUnmanaged (true|false) "false"
>

<!ELEMENT idt ((include)*, 
               (enum|struct|structRef|union|unionRef|typedef)*) >
<!ATTLIST idt
  name CDATA #REQUIRED
>

<!ELEMENT include EMPTY >
<!ATTLIST include
  path CDATA #REQUIRED
>

<!ELEMENT enum (enumMember*) >
<!ATTLIST enum
  name CDATA #IMPLIED
>

<!ELEMENT enumRef EMPTY >
<!ATTLIST enumRef
  name CDATA #REQUIRED
>

<!ELEMENT struct (member*) >
<!ATTLIST struct
  name CDATA #IMPLIED
>

<!ELEMENT structRef EMPTY >
<!ATTLIST structRef
  name CDATA #REQUIRED
>

<!ELEMENT union (member*) >
<!ATTLIST union
  name CDATA #IMPLIED
>

<!ELEMENT unionRef EMPTY >
<!ATTLIST unionRef
  name CDATA #REQUIRED
>

<!ELEMENT typedef (enum | enumRef | struct | structRef | union | unionRef 
    | typedefRef | primitiveType | arrayOf | pointerOf) >
<!ATTLIST typedef
  name CDATA #REQUIRED
  isVolatile (true|false) #IMPLIED
  isConst (true|false) #IMPLIED
>

<!ELEMENT typedefRef EMPTY >
<!ATTLIST typedefRef
  name CDATA #REQUIRED
>

<!ELEMENT enumMember (annotation*, expr?) >
<!ATTLIST enumMember
  name CDATA #REQUIRED
>

<!ELEMENT member (annotation*, (enum | enumRef | struct | structRef | union | unionRef 
    | typedefRef | primitiveType | arrayOf | pointerOf), expr?) >
<!ATTLIST member
  name CDATA #REQUIRED
  isVolatile (true|false) #IMPLIED
  isConst (true|false) #IMPLIED
>

<!ELEMENT method (annotation*, (enumRef | structRef | unionRef | typedefRef | primitiveType
    | arrayOf | pointerOf), parameter*) >
<!ATTLIST method
  name CDATA #REQUIRED
  vaArgs (true|false) #IMPLIED
  isVolatile (true|false) #IMPLIED
  isConst (true|false) #IMPLIED
>

<!ELEMENT parameter (annotation*, (enumRef | structRef | unionRef | typedefRef | primitiveType
    | arrayOf | pointerOf)) >
<!ATTLIST parameter
  name CDATA #REQUIRED
  isIn (true|false) "false"
  isOut (true|false) "false"
  isVolatile (true|false) #IMPLIED
  isConst (true|false) #IMPLIED
>

<!ELEMENT primitiveType EMPTY >
<!ATTLIST primitiveType
  name CDATA #REQUIRED
>

<!ELEMENT arrayOf ((enum | enumRef | struct | structRef | union | unionRef 
    | typedefRef | primitiveType | arrayOf | pointerOf), expr?) >
<!ATTLIST arrayOf
>

<!ELEMENT pointerOf ((enum | enumRef | struct | structRef | union | unionRef 
    | typedefRef | primitiveType | arrayOf | pointerOf)) >
<!ATTLIST pointerOf
  isVolatile (true|false) #IMPLIED
  isConst (true|false) #IMPLIED
>

<!ELEMENT expr EMPTY >
<!ATTLIST expr 
  expr CDATA #REQUIRED
>

<!ELEMENT annotation ( annotationArgument* ) >
<!ATTLIST annotation
  type CDATA #REQUIRED
>

<!ELEMENT annotationArgument ( string | integer | array | annotationValue | null ) >
<!ATTLIST annotationArgument
  name CDATA #IMPLIED
>

<!ELEMENT array ( ( string | integer | array | annotationValue | null )* ) >
<!ATTLIST array >

<!ELEMENT string EMPTY >
<!ATTLIST string
  value CDATA #REQUIRED
>

<!ELEMENT integer EMPTY >
<!ATTLIST integer
  value CDATA #REQUIRED
>

<!ELEMENT null EMPTY >
<!ATTLIST null>

