<plugin id="org.ow2.mind.adl" name="The plugin for ADL backend extensions">
	<extension-point id="definition-visitors"/>
  <extension point="org.ow2.mind.adl.definition-visitors">
	<visitor class="org.ow2.mind.adl.DefinitionHeaderSourceGenerator" name="header"/>
  	<requires>
  		<interface name="input-resource-locator"/>
  		<interface name="output-file-locator"/>
  		<interface name="template-group-loader"/>
  	</requires>
  </extension>
  <extension point="org.ow2.mind.adl.definition-visitors">
	<visitor class="org.ow2.mind.adl.DefinitionIncSourceGenerator" name="include"/>
  	<requires>
  		<interface name="input-resource-locator"/>
  		<interface name="output-file-locator"/>
  		<interface name="template-group-loader"/>
  		<interface name="idl-loader"/>
  	</requires>
  </extension>
  <extension point="org.ow2.mind.adl.definition-visitors">
	<visitor class="org.ow2.mind.adl.ImplementationHeaderSourceGenerator" name="impl"/>
  	<requires>
  		<interface name="input-resource-locator"/>
  		<interface name="output-file-locator"/>
  	</requires>
  </extension>
  <extension point="org.ow2.mind.adl.definition-visitors">
	<visitor class="org.ow2.mind.adl.DefinitionMacroSourceGenerator" name="macro"/>
  	<requires>
  		<interface name="input-resource-locator"/>
  		<interface name="output-file-locator"/>
  		<interface name="template-group-loader"/>
  	</requires>
  </extension>
  <extension point="org.ow2.mind.adl.definition-visitors">
	<visitor class="org.ow2.mind.adl.membrane.MembraneSourceGenerator" name="membrane"/>
  	<requires>
  		<interface name="input-resource-locator"/>
  		<interface name="output-file-locator"/>
  		<interface name="template-group-loader"/>
  		<interface name="idl-loader"/>
  	</requires>
  </extension>
  <extension point="org.ow2.mind.adl.definition-visitors">
	<visitor class="org.ow2.mind.adl.idl.IDLDefinitionSourceGenerator" name="idl"/>
  	<requires>
  		<interface name="idl-loader"/>
  		<interface name="idl-compiler"/>
  	</requires>
  </extension>
  <extension point="org.ow2.mind.adl.definition-visitors">
	<visitor class="org.ow2.mind.adl.generic.GenericDefinitionNameSourceGenerator" name="generic-names"/>
  	<requires>
  		<interface name="output-file-locator"/>
  	</requires>
  </extension>
  <extension point="org.ow2.mind.adl.definition-visitors">
	<visitor class="org.ow2.mind.adl.BinaryADLWriter" name="binary-writer"/>
  	<requires>
  		<interface name="input-resource-locator"/>
  		<interface name="output-file-locator"/>
  	</requires>
  </extension>
	
</plugin>
